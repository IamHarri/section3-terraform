data "aws_region" "current_region" {}


data "aws_ami" "amazon_linux" {
  most_recent = true

  owners = ["amazon", "self"]

  filter {
    name   = "name"
    values = ["amzn2-ami-kernel-5.10-hvm-*-x86_64-gp2"]
  }

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
}